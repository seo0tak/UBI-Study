package ubi.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import ubi.model.ubiBean;
import ubi.model.ubiDao;

@Controller
public class contentViewController {
	private static final String getPage = "contentView";
	private static final String command = "/detail.brd";	
	
	@Autowired
	@Qualifier("myBoardDao")
	private ubiDao dao;
	
	@RequestMapping(value=command)
	public String doActionGet(@RequestParam(value="pmkey",required=true) int pmkey ,
			@RequestParam(value="pageNumber",required=true) int pageNumber ,Model model){
		
		dao.updateReadCount(pmkey);
		
		ubiBean bean =  dao.GetData( pmkey );
		model.addAttribute("bean" , bean);
		model.addAttribute("pageNumber" , pageNumber);
		return getPage; 
	}
	
	
	@RequestMapping(value="/test.brd")
	public String test(){
		return "test1"; 
	}
	
}
















