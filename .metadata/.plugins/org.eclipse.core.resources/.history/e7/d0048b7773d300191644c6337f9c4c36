제목과 작성자로 검색

조회수 10 넘어가면 hot띄우기

답글기능

페이지



create table board(
num number primary key,
ref number,--누구의 답글인지
relevel number,--몇번째 답글인지
readcount number,--조회수
title varchar2(20),--제목
name varchar2(20),--작성자
content varchar2(20)--내용
);





drop table board;

create table board(
num number primary key,
ref number,
relevel number,
readcount number,
title varchar2(20),
name varchar2(20),
content varchar2(20)
);

drop sequence board_seq;

create sequence board_seq
increment by 1
start with 0
minvalue 0
nocache;


insert into board values(board_seq.nextval,board_seq.currval,0,0,'title','name','content');

select * from board;





list--서영탁

insert--조성주
update

delete--조혁

re--이민석



